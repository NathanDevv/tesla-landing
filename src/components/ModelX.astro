---
import Section from "./Section.astro";
---

<Section
  title="Model X"
  subtitle="Programe una consulta virtual"
  color="black"
  id="model-x"
>
  <div slot="footer" class="flex mx-auto gap-x-6">
    <a
      class="border-[3px] border-gray-600 bg-gray-600 text-sm rounded font-medium text-white px-12 py-2 inline-block transition-colors hover:border-gray-500 hover:bg-gray-500"
      href="#"
    >
      Pedido personalizado</a
    >
    <a
      class="inline-flex items-center justify-center px-12 py-2 text-sm font-medium text-black transition-colors bg-white rounded hover:bg-black hover:text-white"
      href="#"
    >
      Saber m√°s</a
    >
  </div>

  <img
    slot="background"
    alt="Model X"
    class="object-cover object-center w-full h-full"
    src="model-x.avif"
    id="bg-image-modelx"
  />
</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true;
    } else {
      return false;
    }
  }

  let imageElement = document.querySelector(
    "#bg-image-modelx"
  ) as HTMLImageElement;

  if (isEdge()) {
    imageElement.src = "model-x.webp";
  } else {
    imageElement.src = "model-x.avif";
  }
</script>
